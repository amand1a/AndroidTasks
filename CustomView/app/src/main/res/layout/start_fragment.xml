<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC">

    <com.example.customview.CustomView
        android:id="@+id/customView"
        android:layout_width="289dp"
        android:layout_height="171dp"
        android:layout_marginTop="64dp"
        app:backgroundColorUnderButton="#D58484"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.customview.CustomProgressBar
        android:id="@+id/customBar"
        android:layout_width="333dp"
        android:layout_height="329dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customView"
        app:layout_constraintVertical_bias="0.299"
        app:value="50" />

    <Button
        android:id="@+id/button2"
        android:layout_width="333dp"
        android:layout_height="67dp"
        android:backgroundTint="#318990"
        android:text="Animate with randow value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customBar" />
</androidx.constraintlayout.widget.ConstraintLayout>