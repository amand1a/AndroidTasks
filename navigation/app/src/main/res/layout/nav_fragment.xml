<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="198dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <Button
            android:id="@+id/button_first_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/first_nav_button" />

        <Button
            android:id="@+id/button_second_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/second_nav_button" />

        <Button
            android:id="@+id/button_third_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/third_nav_button" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>